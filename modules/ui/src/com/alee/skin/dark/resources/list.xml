<skin xmlns="http://weblookandfeel.com">

    <!-- com.alee.laf.list.WebList -->

    <!-- List -->
    <style type="list">
        <component>
            <opaque>true</opaque>
        </component>
        <ui>
            <selectionStyle>group</selectionStyle>
        </ui>
        <painter>
            <decorations>
                <decoration>
                    <BoundsShape />
                    <ColorBackground color="106,110,112" />
                </decoration>
            </decorations>

            <!-- Hover cell background painter -->
            <hoverPainter>
                <decorations>
                    <decoration opacity="0.4">
                        <WebShape round="0" />
                        <GradientBackground>
                            <color>55,55,55</color>
                            <color>25,25,25</color>
                        </GradientBackground>
                    </decoration>
                </decorations>
            </hoverPainter>

            <!-- Selected cells background painter -->
            <selectionPainter>
                <decorations>
                    <decoration>
                        <WebShape round="0" />
                        <GradientBackground>
                            <color>55,55,55</color>
                            <color>25,25,25</color>
                        </GradientBackground>
                    </decoration>
                    <decoration states="disabled" opacity="0.5" />
                </decorations>
            </selectionPainter>

        </painter>

        <!-- Default cell renderer label -->
        <style type="styledlabel" id="renderer" />

        <!-- Text cell renderer label -->
        <style type="styledlabel" id="text-renderer" extends="renderer" padding="4,6,4,4" />

        <!-- Icon cell renderer label -->
        <style type="styledlabel" id="icon-renderer" extends="renderer" padding="4,4,4,4" />

        <!-- Default cell editor field -->
        <style type="textfield" id="editor" extends="nofocus" />

    </style>

    <!-- Non-opaque list -->
    <style type="list" id="non-opaque">
        <component>
            <opaque>false</opaque>
        </component>
    </style>

    <!-- Transparent list -->
    <style type="list" id="transparent" extends="non-opaque">
        <painter>
            <decorations overwrite="true" />
        </painter>
    </style>

</skin>