<skin xmlns="http://weblookandfeel.com">

    <!-- com.alee.extended.tree.WebTreeFilterField -->

    <!-- Tree filter field -->
    <style type="textfield" id="treefilterfield">

        <!-- Settings menu button -->
        <style type="button" id="settings" extends="undecorated" padding="0,2,0,2">
            <component>
                <focusable>false</focusable>
            </component>
        </style>

    </style>

    <!-- Inline tree filter field -->
    <style type="textfield" id="treefilterfield-inline" extends="treefilterfield">
        <painter>
            <decorations overwrite="true">
                <decoration>
                    <BoundsShape />
                    <ColorBackground color="white" />
                </decoration>
            </decorations>
        </painter>
    </style>

    <!-- Transparent tree filter field -->
    <style type="textfield" id="treefilterfield-transparent" extends="treefilterfield">
        <painter>
            <decorations overwrite="true" />
        </painter>
    </style>

</skin>